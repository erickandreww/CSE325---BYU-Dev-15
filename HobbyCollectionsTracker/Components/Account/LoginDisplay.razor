@using Microsoft.AspNetCore.Components.Authorization
@rendermode InteractiveServer

<AuthorizeView>
    <Authorized>
        <span class="me-2">
            Hello, @context.User.Identity?.Name!
        </span>

        @* POST to the logout endpoint provided by Identity *@
        <form method="post" action="Account/Logout" class="d-inline">
            <button type="submit" class="btn btn-link p-0 align-baseline">
                Logout
            </button>
        </form>
    </Authorized>

    <NotAuthorized>
        <a href="Account/Login" class="btn btn-link p-0 align-baseline">
            Login
        </a>
        <a href="Account/Register" class="btn btn-outline-secondary ms-2">
            Register
        </a>
    </NotAuthorized>
</AuthorizeView>