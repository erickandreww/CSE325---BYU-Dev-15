@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Routing
@implements IDisposable

@inject NavigationManager NavigationManager

<div class="top-row">
        <div class="navbar-brand">HCT</div>
        <div class="text-muted small">Hobby Collections Tracker</div>
</div>

<input id="navToggle" type="checkbox" title="Navigation menu" class="navbar-toggler"/>

<div class="nav-scrollable">
    <nav class="flex-column">
        <!-- Home -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                Home
            </NavLink>
        </div>

        <!-- Feed -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="feed">
                Feed
            </NavLink>
        </div>

        <!-- Admin-only: Categories -->
        <AuthorizeView Roles="Admin">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="categories">
                        Categories
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <!-- Authenticated-only links -->
        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="posts/mine">
                        My Posts
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="posts/create">
                        New Post
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link hh-user-link" href="Account/Manage">
                        Account
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}