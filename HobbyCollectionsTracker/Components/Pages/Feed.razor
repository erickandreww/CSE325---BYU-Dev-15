@page "/feed"
@rendermode InteractiveServer

@using HobbyCollectionsTracker.Data
@using HobbyCollectionsTracker.Models
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext Db

<div class="hh-page-container">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-end gap-3 mb-3">
        <h2 class="hh-page-title">Community Feed</h2>

        <div class="mb-0">
            <label for="categoryFilter" class="form-label mb-1">Filter by Category</label>
            <InputSelect id="categoryFilter"
                         class="form-select"
                         @bind-Value="selectedCategoryId">
                <option value="0">All Categories</option>
                @foreach (var cat in categories)
                {
                    <option value="@cat.Id">@cat.Name</option>
                }
            </InputSelect>
        </div>
    </div>

    @if (isLoading)
    {
        <p>Loading...</p>
    }
    else if (!FilteredPosts.Any())
    {
        <p>No posts found for this filter.</p>
    }
    else
    {
        <div class="hh-feed-grid">
            @foreach (var post in FilteredPosts)
            {
                <article class="hh-post-card">
                    @if (!string.IsNullOrWhiteSpace(post.ImageUrl))
                    {
                        <img src="@post.ImageUrl"
                             alt="@post.Title"
                             class="img-fluid mb-2"
                             style="object-fit: cover; max-height: 220px; width: 100%;" />
                    }

                    <h5 class="mb-1">
                        <a href="/posts/details/@post.Id">@post.Title</a>
                    </h5>

                    <h6 class="text-muted mb-0">
                        @post.Category?.Name Â· @post.CreatedAt.ToLocalTime().ToString("g")
                    </h6>
                </article>
            }
        </div>
    }
</div>

@code {
    private List<Post> allPosts = new();
    private List<Category>? categories;
    private int selectedCategoryId = 0;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        categories = await Db.Categories
            .OrderBy(c => c.Name)
            .ToListAsync();

        allPosts = await Db.Posts
            .Include(p => p.Category)
            .OrderByDescending(p => p.CreatedAt)
            .ToListAsync();

        isLoading = false;
    }

    private IEnumerable<Post> FilteredPosts =>
        selectedCategoryId == 0
            ? allPosts
            : allPosts.Where(p => p.CategoryId == selectedCategoryId);
}
